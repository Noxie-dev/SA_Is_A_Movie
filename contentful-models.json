{
  "contentTypes": [
    {
      "sys": {
        "id": "trendingStory"
      },
      "name": "Trending Story",
      "description": "Stories that are currently trending on SA IS A MOVIE",
      "displayField": "title",
      "fields": [
        {
          "id": "title",
          "name": "Title",
          "type": "Symbol",
          "localized": false,
          "required": true,
          "validations": [
            {
              "size": {
                "max": 100
              }
            }
          ]
        },
        {
          "id": "description",
          "name": "Description",
          "type": "Text",
          "localized": false,
          "required": true,
          "validations": [
            {
              "size": {
                "max": 500
              }
            }
          ]
        },
        {
          "id": "category",
          "name": "Category",
          "type": "Symbol",
          "localized": false,
          "required": true,
          "validations": [
            {
              "in": [
                "music",
                "scandal",
                "celebrity",
                "culture",
                "politics",
                "sports"
              ]
            }
          ]
        },
        {
          "id": "color",
          "name": "Color Theme",
          "type": "Symbol",
          "localized": false,
          "required": true,
          "validations": [
            {
              "in": [
                "saisa-text-blue",
                "saisa-text-pink",
                "saisa-text-yellow",
                "saisa-text-red"
              ]
            }
          ]
        },
        {
          "id": "featuredImage",
          "name": "Featured Image",
          "type": "Link",
          "linkType": "Asset",
          "localized": false,
          "required": false
        },
        {
          "id": "isActive",
          "name": "Is Active",
          "type": "Boolean",
          "localized": false,
          "required": true
        },
        {
          "id": "publishedDate",
          "name": "Published Date",
          "type": "Date",
          "localized": false,
          "required": true
        }
      ]
    },
